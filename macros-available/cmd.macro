# Concurrently run a command on every matching server and return the result in the background. --cmd=hostRegex command ~ bg,terminal,user

list ~!Global,cmd!~
resultSet cmd,~!Global,stray!~
addSlashes cmd,cmd

# the internalIP will work if we are connected to a VPN
chooseFirst IP,externalIP,internalIP

toString ssh ~%IP%~ '~%cmd%~ | while read in;do echo "~%hostName%~: $in";done' >&2 &
exec
